<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_collection">

    <fragment
        android:id="@+id/navigation_collection"
        android:name="com.example.myboardgameapplication.ui.collection.CollectionFragment"
        android:label="@string/title_collection"
        tools:layout="@layout/fragment_collection" >
        <action
            android:id="@+id/action_navigation_collection_to_navigation_dashboard"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_collection_to_navigation_notifications"
            app:destination="@id/navigation_event" />
    </fragment>

    <fragment
        android:id="@+id/navigation_friend"
        android:name="com.example.myboardgameapplication.ui.friends.FriendsFragment"
        android:label="@string/title_friends"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_collection"
            app:destination="@id/navigation_collection" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_event" />
    </fragment>

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.example.myboardgameapplication.ui.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_dashboard"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_collection"
            app:destination="@id/navigation_collection" />
    </fragment>
</navigation>